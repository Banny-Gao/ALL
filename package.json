{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "cz": "prettier -c -w . && git add -A && git-cz",
    "cra": "node scripts/cra.js",
    "clean": "lerna clean",
    "changelog": "conventional-changelog -p conventionalcommits -i CHANGELOG.md -s",
    "eslint": "eslint packages --ext .js,.jsx,.ts,.tsx "
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "lint-staged": {
    "**/.*{css,scss,less}": "stylelint",
    "*.{js,jsx,ts,jsx}": "eslint --ext .js,.jsx,.ts,.tsx"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@commitlint/config-lerna-scopes": "^13.2.0",
    "@commitlint/cz-commitlint": "^13.2.1",
    "@commitlint/format": "^13.2.0",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "commitizen": "^4.2.4",
    "conventional-changelog": "^3.1.24",
    "conventional-changelog-conventionalcommits": "^4.6.1",
    "eslint": "^8.2.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-typescript": "^14.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest": "^25.2.4",
    "eslint-plugin-jsx-a11y": "6.5.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-unicorn": "^38.0.1",
    "husky": "^7.0.2",
    "inquirer": "^8.2.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.2.3",
    "prettier": "^2.4.1",
    "stylelint": "^13.13.1",
    "stylelint-config-css-modules": "^2.2.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.4.0",
    "typescript": "^4.4.4"
  }
}
